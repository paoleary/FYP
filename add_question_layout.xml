<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:scrollbars="vertical"
    app:cardElevation="4dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edtNewQuizName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Quiz Name"
                android:includeFontPadding="false"
                android:inputType="text"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:textSize="24sp"
                android:layout_marginTop="-15dp"
                android:layout_marginBottom="-15dp"
                app:met_baseColor="@color/colorPrimary"
                app:met_checkCharactersCountAtBeginning="false"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="@color/colorPrimary"
                app:met_singleLineEllipsis="true" />
                -->


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edtNewQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Question"
                android:inputType="text"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:textSize="24sp"
                android:includeFontPadding="false"
                android:layout_marginTop="-15dp"
                android:layout_marginBottom="-15dp"
                app:met_baseColor="@color/colorPrimary"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="@color/colorPrimary"
                app:met_singleLineEllipsis="true" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edtNewAnswerA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Answer A"
                android:inputType="text"
                android:scrollbars="none"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:textSize="24sp"
                android:includeFontPadding="false"
                android:layout_marginTop="-15dp"
                android:layout_marginBottom="-15dp"
                app:met_baseColor="@color/colorPrimary"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="@color/colorPrimary"
                app:met_singleLineEllipsis="true" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edtNewAnswerB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Answer B"
                android:inputType="text"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:textSize="24sp"
                android:includeFontPadding="false"
                android:layout_marginTop="-15dp"
                android:layout_marginBottom="-15dp"
                app:met_baseColor="@color/colorPrimary"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="@color/colorPrimary"
                app:met_singleLineEllipsis="true" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edtNewAnswerC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Answer C"
                android:inputType="text"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:textSize="24sp"
                android:includeFontPadding="false"
                android:layout_marginTop="-15dp"
                android:layout_marginBottom="-15dp"
                app:met_baseColor="@color/colorPrimary"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="@color/colorPrimary"
                app:met_singleLineEllipsis="true" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edtNewAnswerD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Answer D"
                android:inputType="text"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:textSize="24sp"
                android:includeFontPadding="false"
                android:layout_marginTop="-15dp"
                android:layout_marginBottom="-15dp"
                app:met_baseColor="@color/colorPrimary"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="@color/colorPrimary"
                app:met_singleLineEllipsis="true" />
        </LinearLayout>
    </ScrollView>
</android.support.v7.widget.CardView>